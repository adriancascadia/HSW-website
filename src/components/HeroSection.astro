---
import Image from "astro/components/Image.astro";
import bg_image from "../assets/cover.webp";
---

<section class="flex flex-col items-center justify-center">
  <div class="relative w-full min-h-screen flex items-center justify-center">
    <Image
      src={bg_image}
      alt=""
      format="webp"
      class="absolute min-h-svh object-cover inset-0 bottom-auto -z-1 w-full h-full"
      loading="eager"
    />
    <div
      class="h-1/2 absolute inset-0 bg-gradient-to-b from-bs-surface-0/50 md:from-bs-surface-0/10 to-transparent"
    >
    </div>

    <div
      class="absolute top-0 md:top-40 md:left-0
                flex flex-col gap-3
                items-center
                md:items-start
                bg-[--bs-surface-3/60]
                rounded-xl
                py-3
                px-3
                md:p-8
                md:w-1/2"
    >
      
      <div
        class="md:w-[50vw] flex items-center md:bg-gradient-to-r from-bs-surface-0/90 to-transparent rounded md:p-3 md:-ml-9"
      >
        <h1 class="bs-h1 text-center text-shadow-lg/30 md:text-shadow-lg md:text-left md:ml-6 uppercase">
          Hawaii’s Only Artesian Water Bottled at the Source
        </h1>
      </div>
      <div class="bs-h4 flex text-center gap-4 text-shadow-lg/30 uppercase">
        <p>
          Never Filtered Tap
        </p>

        <p>
          Never Tankered
        </p>
      </div>
       <p
          class="max-w-md text-pretty text-white bs-body-text"
        >
          Born from the Volcano.
        </p>
      <!-- Call to actions -->
      <div class="md:mt-1 flex flex-wrap items-center gap-3">
        <a href="#shop" class="bs-btn"> Shop Now </a>
      </div>
    </div>
