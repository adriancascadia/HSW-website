---
import Image from "astro/components/Image.astro";
import bg_image from "../assets/cover.webp";
---

<section class="flex flex-col items-center justify-center">
  <div class="relative w-full min-h-screen flex items-center justify-center">
    <Image
      src={bg_image}
      alt=""
      format="webp"
      class="absolute min-h-svh object-cover inset-0 bottom-auto -z-1 w-full h-full"
      loading="eager"
    />
    <div class="h-1/2 absolute inset-0 bg-gradient-to-b from-bs-surface-0/50 md:from-bs-surface-0/10 to-transparent"></div>


    <div
      class="absolute top-0 md:top-40 md:left-0
                flex flex-col gap-3
                items-center
                md:items-start
                bg-[--bs-surface-3/60]
                rounded-xl
                py-3
                px-3              
                md:p-8
                md:w-1/2"
    >
      <h1 class="block md:hidden bs-h1 text-center md:text-start md:pl-9">
          HAWAII’S ONLY WATER <br />
          BOTTLED AT THE SOURCE
        </h1>
      <div
        class="hidden md:w-[50vw] md:block flex items-center bg-gradient-to-r from-bs-surface-0/90 to-transparent rounded p-3 -ml-9"
      >
        <h1 class="bs-h1 text-center md:text-left pl-9">
          HAWAII’S ONLY WATER <br />
          BOTTLED AT THE SOURCE
        </h1>
      </div>
      <div class="flex flex-col items-center gap-2">
      <div class="flex gap-4 -my-1 md:pl-2">
        <div
          class="inline-flex items-center gap-2 rounded-full border border-white/40 bg-bs-surface-3/60 hover:bg-bs-surface-3/80 px-3 py-1"
        >
          <span class="h-1.5 w-1.5 rounded-full bg-white"></span>
          <p class="w-full text-white tracking-normal uppercase bs-h4">Never Filtered Tap</p>
        </div>
        <div
          class="inline-flex items-center gap-2 rounded-full border border-white/40 bg-bs-surface-3/60 hover:bg-bs-surface-3/80 px-3 py-1"
        >
          <span class="h-1.5 w-1.5 rounded-full bg-white"></span>
          <p class="w-full text-white tracking-normal uppercase bs-h4">Never Tankered</p>
        </div>
      </div>
      <!-- Call to actions -->
      <div class="pl-2 md:mt-1 flex flex-wrap items-center gap-3">
        <a
          href="#shop"
          class="bs-btn"
        >
          Shop Now
        </a>
      </div>
      </div>
    </div>
