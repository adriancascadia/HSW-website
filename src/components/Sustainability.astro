---
import Image from "astro/components/Image.astro";
import bg_image from "../assets/sustainability.webp";
import bottleImage from "../assets/theme-images/500ml.png";
import PacificOcean from "../assets/theme-images/PacificOcean.svg";
import TropicalRain from "../assets/theme-images/TropicalRain.svg";
import Mountains from "../assets/theme-images/Mountains.svg";
import Volcano from "../assets/theme-images/Volcano.svg";
import HawaiianVolcano from "../assets/theme-images/HawaiianVolcano.svg";
import WaterSource from "../assets/theme-images/WaterSource.svg";
import Arrow1 from "../assets/arrow1.svg";
import Arrow2 from "../assets/arrow2.svg";
import Arrow3 from "../assets/arrow3.svg";
import Arrow4 from "../assets/arrow4.svg";
import ScrollReveal from "./ScrollReveal.astro";
---

<section
  id="sustainability"
  class="relative flex flex-col justify-between w-full"
>
  <Image
    src={bg_image}
    alt="Fondo montaÃ±oso"
    format="webp"
    class="absolute object-cover w-full h-full object-contain -z-10"
    loading="eager"
  />
  <div
    class="absolute inset-0 w-full -z-10 bg-gradient-to-b from-black/60 to-transparent"
  >
  </div>

  <div class="mx-2 md:mx-20 ">
    <h1 class="mt-6 bs-h2 text-white">Sustainability</h1>
    <p class="mt-3 bs-body-text text-white">
      Born from a 13,000-foot volcanic aquifer, naturally filtered through lava
      rock, mineral-rich, and bottled at the source
    </p>
  </div>

  <div
    class="flex flex-col items-center gap-3 py-5 lg:px-20"
  >
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 w-full place-items-center">
      <ScrollReveal delay="0">
        <PacificOcean class="w-[18vw] md:w-[13vw] lg:w-[8vw] text-white" />
      </ScrollReveal>

      <div class="flex items-center justify-start">
        <ScrollReveal delay="500">
          <Arrow1 class="-ml-[15vw] w-[8vw] lg:-ml-[10vw] lg:w-[4vw]" />
        </ScrollReveal>
        <ScrollReveal delay="500">
          <TropicalRain class=" w-[20vw] md:w-[13vw] lg:w-[8vw] text-white" />
        </ScrollReveal>
      </div>

      <div class="flex">
      <ScrollReveal delay="1000">
        <Mountains class="mt-5 ml-[20vw] lg:ml-0 lg:mt-15 w-[20vw] md:w-[13vw] lg:w-[8vw] text-white" />
      </ScrollReveal>
      <ScrollReveal delay="1000">
        <Arrow2
          class="lg:mt-20 lg:-ml-[17vw] rotate-110 lg:rotate-0 w-[10vw] lg:w-[5vw]"
        />
      </ScrollReveal>
      </div>

      <div class="relative lg:top-30 flex flex-col gap-6">
        <ScrollReveal delay="1500">
          <Arrow3 class="w-[10vw] lg:w-[5vw]" />
        </ScrollReveal>
        <ScrollReveal delay="1500">
          <Volcano class="w-[35vw] md:w-[13vw] lg:w-[15vw] text-white" />
        </ScrollReveal>
        <div class="flex">
        <ScrollReveal delay="2000">
          <HawaiianVolcano
            class="-ml-10 lg:-ml-30 w-[40vw] md:w-[13vw] lg:w-[15vw] text-white"
          />
        </ScrollReveal>
        <ScrollReveal delay="1700">
          <Arrow4 class="w-[5vw] lg:w-[2vw]" />
        </ScrollReveal>
        </div>
      </div>
    </div>
    <ScrollReveal delay="2500">
      <WaterSource class="pt-5 lg:pt-20 w-[50vw] md:w-[50vw] lg:w-[40vw] text-white" />
    </ScrollReveal>
  </div>
  <div class="flex flex-row justify-center items-center bg-bs-surface-2 w-full h-[15vw] md:h-[10vw] lg:h-[6vw] z-1">
    <Image
      src={bottleImage}
      alt="Sustainability Bottle"
      class="absolute bottom-0 left-[5vw] md:left-[15vw] w-[20vw] md:w-[10vw] lg:w-[10vw] object-contain"
      width={150}
      height={250}
      loading="eager"
    />
      <p class="w-1/2 text-base md:text-2xl lg:text-3xl font-bold text-center leading-5 md:leading-8 text-white">Never Filtered Tap. Never Tankered.</p>

  </div>
</section>
