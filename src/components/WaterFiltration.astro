---
// src/components/WaterFiltration.astro

// Importa tus imágenes desde la carpeta assets
// Asegúrate de que las rutas y los nombres de archivo coincidan con los tuyos
import volcanoImage from "../assets/theme-images/volcano.png";
import volcanoinsideImage from "../assets/theme-images/volcanoinside.png";
import aquafireImage from "../assets/theme-images/aquafier.png";

// Datos del proceso de filtración
const filtrationSteps = [
  {
    image: volcanoImage,
    alt: "Image of a volcano",
    title: "1. Natural Source Collection (Volcano)",
    description:
      "Water is naturally collected from pristine, high-altitude mountain springs, often filtered by layers of volcanic rock. This initial process ensures a clean start, rich in natural minerals.",
  },
  {
    image: volcanoinsideImage,
    alt: "Image of a volcano inside view",
    title: "2. Deep Mineral Filtration",
    description:
      "The volcanic rock acts as a profound natural filter. As water percolates through, it removes impurities while acquiring a unique balance of essential electrolytes and alkalinity, enhancing its purity and taste.",
  },
  {
    image: aquafireImage,
    alt: "Image of pure bottled water",
    title: "3. Pure Bottling and Quality Check",
    description:
      "The naturally filtered water is subjected to a final quality check before being sealed at the source to preserve its mineral composition and pristine condition. **NEVER FILTERED TAP. NEVER TANKERED**.",
  },
];
---

<section class="py-12 md:py-20">
  <div id="our-source" class="container mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="text-center mb-12">
      <h2 class="text-4xl font-extrabold text-gray-900 dark:text-white sm:text-5xl">
        The Water Filtration Process
      </h2>
      <p class="mt-4 text-xl text-gray-600 dark:text-gray-400">
        Experience the purity from the source to the bottle.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {
        filtrationSteps.map((step, index) => (
          <div class="bg-white dark:bg-[color:var(--accent)] p-6 rounded-lg shadow-xl text-center transition duration-300 hover:shadow-2xl hover:scale-[1.02]">
            
            <img 
              src={step.image.src} 
              alt={step.alt} 
              class="mx-auto mb-6 h-36 w-auto object-contain"
              loading="lazy"
            />
            
            <span class="inline-block px-3 py-1 text-sm font-semibold text-white dark:text-white bg-[color:var(--tangerine)]  rounded-full mb-4">
              Step {index + 1}
            </span>

            <h3 class="text-2xl font-bold text-white mb-3">
              {step.title}
            </h3>
            
            <p class="text-white">
              {step.description}
            </p>
          </div>
        ))
      }
    </div>

  </div>
</section>