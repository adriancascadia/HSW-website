---
import Bottled from "../assets/theme-images/bottled.svg";
import Filtered from "../assets/theme-images/filtered.svg";
import Alkaline from "../assets/theme-images/alkaline.svg";
import Kosher from "../assets/theme-images/kosher.svg";
import Sustainable from "../assets/theme-images/sustainable.svg";
import Recycle from "../assets/theme-images/recycle.svg";
---

<section class="mt-10 ">
  <div class="grid grid-cols-3 text-center md:grid-cols-6">
    <div class="flex flex-col items-center pb-3 px-2">
      <Bottled
        class="w-30 h-30 text-[color:var(--accent)] hover:text-[color:var(--aquasky)]"
      />
      <p class="bs-icons text-[color:var(--accent)] -mt-7">BOTTLED ON HAWAII</p>
    </div>

    <div class="flex flex-col items-center pb-3 px-2">
      <Filtered
        class="w-30 h-30 text-[color:var(--accent)] hover:text-[color:var(--aquasky)]"
      />
      <p class="bs-icons text-[color:var(--accent)] -mt-7">LAVA ROCK FILTERED</p>
    </div>

    <div class="flex flex-col items-center pb-3 px-2">
      <Alkaline
        class="w-30 h-30 text-[color:var(--accent)] hover:text-[color:var(--aquasky)]"
      />
      <p class="bs-icons text-[color:var(--accent)] -mt-7">NATURALLY ALKALINE</p>
    </div>

    <div class="flex flex-col items-center pb-3 px-2">
      <Kosher
        class="w-30 h-30 text-[color:var(--accent)] hover:text-[color:var(--aquasky)]"
      />
      <p class="bs-icons text-[color:var(--accent)] -mt-7">KOSHER</p>
    </div>
    <div class="flex flex-col items-center pb-3 px-2">
      <Sustainable
        class="w-30 h-30 text-[color:var(--accent)] hover:text-[color:var(--aquasky)]"
      />
      <p class="bs-icons text-[color:var(--accent)] -mt-7">SUSTAINABLE RESOURCE</p>
    </div>
    <div class="flex flex-col items-center pb-3 px-2">
      <Recycle
        class="w-30 h-30 text-[color:var(--accent)] hover:text-[color:var(--aquasky)]"
      />
      <p class="bs-icons text-[color:var(--accent)] -mt-7">PLEASE RECYCLE</p>
    </div>
  </div>
</section>
