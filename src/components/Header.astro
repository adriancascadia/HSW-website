---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import logoUrl from "../assets/logo.svg";
---

<header>
  <nav>
    <img
      class="transition-transform duration-300 ease-in-out hover:scale-110 focus:scale-110"
      src="/assets/logo.svg"
      alt="Hawaiian Sprints Water Logo"
      width="150"
    />
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Why HSW</HeaderLink>
      <HeaderLink href="/community">Community</HeaderLink>
      <HeaderLink href="/about">About Us</HeaderLink>
    </div>
    <div class="social-links flex items-center gap-4 text-gray-600">
      <!-- Facebook -->
      <a
        href="https://www.facebook.com/HawaiianSprings/"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-[#1877F2] transition-colors"
      >
        <span class="sr-only">Síguenos en Facebook</span>
        <svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32">
