      <!-- LinkedIn -->
      <a
        href="https://www.linkedin.com/company/TU_EMPRESA"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-[#0A66C2] transition-colors"
      >
        <span class="sr-only">Síguenos en LinkedIn</span>
        <svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32">
