---
import Social from "./Social.astro"
const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} Hawaiian Springs. All rights reserved.
	<div class="social-links">
		<Social/>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--light)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 0.3em;
		margin-top: 1em;
	}
</style>
