---
import Social from "./Social.astro"
import Logo from '../assets/theme-images/logo.svg'
import Menu from "./BurgerMenu.astro"
const { settings } = Astro.props

---

<header class="wrapper font-semibold">

  <!-- Wrapper -->
  <div class="bs-container flex justify-between items-center">

    <!-- Logo -->
    <a class="flex group" href="/" aria-label={ settings.title + ' - Home' }>

      <Logo class="text-[color:var(--accent)] hover:text-[color:var(--aquasky)] transition-transform ease-bs-spring duration-1000" height="100" width="100" />

    </a>
    <Menu/>

  </div>
    <!-- Nav -->
    <nav class="nav-links hidden col-span-6 md:flex">

      <!-- Links -->
      { settings.nav.map( item =>

        <a class="text-[color:var(--accent)] !bg-transparent before:translate-y-full hover:before:translate-y-0" href={item.link}>
          { item.title }
        </a>

      )}

    </nav>

    <!-- CTA -->
   <!-- <button type="button" class="min-w-32 bs-btn" onclick="demo.showModal()">

      { settings.demo.title }

    </button>  -->

 

</header>

<script>
      import "../scripts/menu.js";
    </script>
